<aside id="aside" class="aside">
    <div id="aside-mask" class="aside-mask"></div>
    <div id="aside-inner" class="aside-inner">
        <%- search_form({button: '<i class="icon-search-stroke"></i>'}) %>

        <% var t = null %>
        <% if( is_post() ) { %>
        <% t = toc(page.content) %>
        <% } %>

        <% if( t ) { %>
        <%- t %>
        <% } else { %>
        <div class="author-meta">
            <% if( theme.author.avatar_url ) { %>
            <div class="author-avatar">
                <a href="<%- url_for() %>">
                    <img src="<%= theme.author.avatar_url %>" title="Sanonz">
                </a>
            </div>
            <% } %>
            <div class="author-name"><%= theme.author.name %></div>
            <div class="author-work"><%- theme.author.work %></div>
            <div class="author-location">
                <i class="icon-location vm"></i>
                <span class="vm"><%= theme.author.location %></span>
            </div>
            <% if( theme.links ) { %>
            <div class="author-thread-wrap">
                <div class="author-threads clearfix">
                    <% if( theme.links.github ) { %>
                    <a class="thread-item" href="<%= theme.links.github %>" target="_blank" rel="noopener"><i class="icon-github"></i></a>
                    <% } %>
                    <% if( theme.links.more ) { %>
                    <a class="thread-item" href="<%= theme.links.more %>" target="_blank" rel="noopener"><i class="icon-circle-more"></i></a>
                    <% } %>
                    <% if( theme.links.twitter ) { %>
                    <a class="thread-item" href="<%= theme.links.twitter %>" target="_blank" rel="noopener"><i class="icon-twitter"></i></a>
                    <% } %>
                </div>
            </div>
            <% } %>
        </div>
        <% } %>
    </div>
</aside>
